{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["import", "typescript"],
	"categories": {
		"correctness": "warn",
		"suspicious": "warn",
		"perf": "warn"
	},
	"rules": {
		"no-unused-vars": "error",
		"no-unused-imports": "error",
		"no-unused-private-class-members": "error"
	},
	"ignorePatterns": ["**/node_modules", "**/dist", "**/bun.lock"]
}
